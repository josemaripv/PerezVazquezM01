<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/konoha"
    tools:context=".DeleteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:src="@drawable/sharingan" />

        <LinearLayout
            android:layout_width="336dp"
            android:layout_height="331dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="120dp">

            <TextView
                android:id="@+id/textViewSalir"
                android:layout_width="366dp"
                android:layout_height="29dp"
                android:text="ID:"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/editTextIDdelete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.48000002" />

            <EditText
                android:id="@+id/editTextIDdelete"
                android:layout_width="369dp"
                android:layout_height="wrap_content"
                android:hint="Ingrese el ID"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:textColorHighlight="#9BB2BC"
                android:textColorLink="#0D3444"
                app:layout_constraintBottom_toTopOf="@+id/buttonSalir"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewSalir" />

            <Button
                android:id="@+id/buttonSalir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#CA6647"
                android:text="Borrar Personaje"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="272dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:src="@drawable/logokonoha"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonActualizarPersonaje" />

    </LinearLayout>

</FrameLayout>